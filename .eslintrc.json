{
  "extends": "standard",
  "plugins": ["import", "promise", "standard"],
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "rules": {
    "semi": ["error", "always"],
    "space-before-function-paren": ["error", "always"],
    "object-curly-spacing": ["error", "always"],
    "padded-blocks": 0
  }
}
